#
# Bar
#
### Colors
set $bg          #272822
set $inactive-bg #272822
set $text          #f1ebeb
set $inactive-text #969896
set $urgent-bg     #cc342b

bar {
  status_command while ~/rand/scripts/bar.sh; do sleep 1; done
    tray_output primary
    colors {
      background $bg
#                  border       background   text
        focused_workspace  $bg          $bg          $text
        inactive_workspace $inactive-bg $inactive-bg $inactive-text
        urgent_workspace   $urgent-bg   $urgent-bg   $text
    }
  mode hide
    hidden_state hide
    modifier mod4+Alt
}

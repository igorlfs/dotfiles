#
# Input / Seat
#
input type:keyboard xkb_layout "br"
input type:touchpad {
    tap enabled
    dwt enabled
    tap_button_map lrm
    scroll_method edge
}
seat seat0 hide_cursor when-typing enable

#
# Executables
#

# Miscellaneous
exec autotiling
exec wlsunset -l -19.5 -L -43.6
exec_always gsettings set org.gnome.desktop.privacy remember-recent-files false

# Audio
exec pipewire
exec pipewire-pulse
exec wireplumber

# Screenshare
exec /usr/lib/xdg-desktop-portal
exec /usr/lib/xdg-desktop-portal-wlr

# Idle
exec swayidle timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'
for_window [app_id="firefox"] inhibit_idle fullscreen

### Import config dir
include ~/.config/sway/config.d/*

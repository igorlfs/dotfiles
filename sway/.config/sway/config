# Export variables to use screenshare
exec dbus-update-activation-environment DISPLAY I3SOCK SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Pure Wayland
xwayland disable

#
# Input / Seat
#
input type:keyboard xkb_layout "br"
input type:touchpad {
    tap enabled
    dwt enabled
    tap_button_map lrm
    scroll_method edge
}
seat seat0 hide_cursor when-typing enable

#
# Executables
#

# Miscellaneous
exec autotiling
exec gammastep -l -19.5:-43.6
exec_always gsettings set org.gnome.desktop.privacy remember-recent-files false

# Audio
exec pipewire
exec pipewire-pulse
exec wireplumber

# Idle
exec swayidle timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'

### Import config dir
include ~/.config/sway/config.d/*
